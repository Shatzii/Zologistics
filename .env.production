# TruckFlow AI - Production Environment Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://truckflow_user:secure_password@localhost:5432/truckflow_production
PGHOST=localhost
PGPORT=5432
PGUSER=truckflow_user
PGPASSWORD=secure_password
PGDATABASE=truckflow_production

# Session Configuration
SESSION_SECRET=generate_a_secure_64_character_random_string_here_for_production

# Load Board API Keys (Required for production)
DAT_API_KEY=your_dat_loadboard_api_key_here
TRUCKSTOP_API_KEY=your_truckstop_api_key_here
CHROBINSON_API_KEY=your_ch_robinson_api_key_here
CONVOY_API_KEY=your_convoy_api_key_here
UBER_FREIGHT_API_KEY=your_uber_freight_api_key_here

# Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# AI Configuration
OPENAI_API_KEY=your_openai_api_key_for_rate_optimization

# Email Configuration (for driver notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@truckflowai.com
SMTP_PASSWORD=your_email_app_password

# Security Configuration
CORS_ORIGIN=https://truckflowai.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Application Configuration
APP_NAME=TruckFlow AI
APP_URL=https://truckflowai.com
SUPPORT_EMAIL=support@truckflowai.com